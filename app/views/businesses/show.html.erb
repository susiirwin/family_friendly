<div class="container">
  <h1><%= @business.name %></h1>
  <div class="jumbotron">
    <div class="yelp_business_show">

      <h3>Phone Number: <%= @business.phone %> </h3>
      <h3>Address: <%= @business.address %> </h3>
      <h3>Average Yelp Rating: <%= @business.star_rating %> Stars</h3>

      <%= link_to "Add a Family Friendly Review", new_businesses_review_path, method: :get, params: { id: params[:id] }, class: "btn btn-family" %>
    </div>
  </div>
</div>
