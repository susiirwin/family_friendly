<div class="container">
  <h1><%= @business.name %></h1>
  <div class="jumbotron">
    <div class="yelp_business_show">
      <%= hidden_field_tag :id, :value => @business.id %>

      <div class="row">
        <div class="col-md-6">
          <h3>Address: </h3>
          <p>
            <%= format_display_address(@business.address) %>
          </p>
          <h3>Phone Number: </h3>
          <p>
            <%= @business.phone %>
          </p>
        </div>
        <div class="col-md-6">
          <h3>Average Yelp Rating: </h3>
          <p>
            <%= @business.star_rating %>
          </p>
          <h3>Average Family Friendly Rating: </h3>
          <p>
            <%= @business.average_family_friendly_rating %>
          </p>
        </div>
      </div>

      <h3>Amenities Available to Guests:</h3>
        <% @business.show_amenities.each do |amenity| %>
          <ul>
            <li> <%= amenity %> </li>
          </ul>
          <% end %>

      <h3>Reviews left by other Family Friendly Members:</h3>

      <% @business.gather_comments.each do |comment| %>
        <ul>
          <li>"<%= comment %>"</li>
        </ul>
      <% end %>
      <br>
      <%= link_to "Add a Family Friendly Review", new_business_review_path(@business), class: "btn btn-family" %>
    </div>
  </div>
</div>
